<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.juboraj_sarker.tictactoe.SinglePlayerActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="50dp">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="8dp">

                <Button
                    android:id="@+id/btn_s1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:onClick="click_single"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/roundedbutton" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="8dp">

                <Button
                    android:id="@+id/btn_s2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:onClick="click_single"
                    android:background="@drawable/roundedbutton"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="8dp">

                <Button
                    android:id="@+id/btn_s3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/roundedbutton"
                    android:onClick="click_single" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="8dp">

                <Button
                    android:id="@+id/btn_s4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:onClick="click_single"
                    android:background="@drawable/roundedbutton"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="8dp">

                <Button
                    android:id="@+id/btn_s5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:onClick="click_single"
                    android:background="@drawable/roundedbutton"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="8dp">

                <Button
                    android:id="@+id/btn_s6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/roundedbutton"
                    android:onClick="click_single"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="8dp">

                <Button
                    android:id="@+id/btn_s7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:onClick="click_single"
                    android:background="@drawable/roundedbutton"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="8dp">

                <Button
                    android:id="@+id/btn_s8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:onClick="click_single"
                    android:background="@drawable/roundedbutton"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_s9"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/roundedbutton"
                    android:onClick="click_single"
                    android:layout_marginTop="5dp" />

            </LinearLayout>




        </LinearLayout>


        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="new_game_s"
            android:padding="20dp"
            android:text="New Game"
            android:textSize="20sp" />


    </LinearLayout>









</LinearLayout>
