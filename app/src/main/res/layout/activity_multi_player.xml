<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.juboraj_sarker.tictactoe.MultiPlayerActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="50dp">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_x1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="click"
                    android:layout_marginRight="5dp"
                    android:background="#ccc"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_x2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="click"
                    android:background="#ccc"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_x3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ccc"
                    android:onClick="click" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_y1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="click"
                    android:background="#ccc"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_y2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="click"
                    android:background="#ccc"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_y3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ccc"
                    android:onClick="click"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_z1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="click"
                    android:background="#cccccc"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_z2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="click"
                    android:background="#ccc"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_z3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ccc"
                    android:onClick="click"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>




        </LinearLayout>


        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="new_game"
            android:padding="20dp"
            android:text="New Game"
            android:textSize="20sp" />


    </LinearLayout>





</LinearLayout>
